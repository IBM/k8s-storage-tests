apiVersion: batch/v1
kind: Job
metadata:
  name: sysbench-random-write-rwo
  namespace: "{{ storage_perf_namespace }}"
spec:
  template:
    metadata:
      name: sysbench-random-write-rwo
    spec:
      containers:
      - name: sysbench-random-write-rwo
        image: {{ imageurl }}
        command: ["python3"]
        args:
          - '/tmp/sysbench.py'
          - '{{ rwrite_threads }}'
          - '{{ rwrite_fileTotalSize }}'
          - '{{ rwrite_fileNum }}'
          - 'rndwr'
          - '{{ rwrite_fileBlockSize }}'
          - 'async'
          - '0'
          - 'dsync'
          - '{{ cluster_environment }}'
          - '{{ cluster_name }}'
          - '{{ storage_type }}'
          - 'pvc-sysbench-rwo'
        volumeMounts:
        - name: tmp-store
          mountPath: /tmp/data
      volumes:
      - name: tmp-store
        persistentVolumeClaim:
          claimName: pvc-sysbench-rwo
          readOnly: false
      restartPolicy: Never